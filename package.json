{
    "name": "@eurostat/vtl-editor",
    "version": "0.1.2",
    "description": "VTL editor based on Monaco",
    "repository": {
        "type": "git",
        "url": "https://github.com/eurostat/vtl-editor.git"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "webpack",
        "lint:check": "eslint . --ext .ts,.tsx",
        "lint": "npm run lint:check -- --fix",
        "_format": "prettier '**/*.{ts,tsx,json,md}'",
        "format": "npm run _format -- --write",
        "format:check": "npm run _format -- --list-different",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix"
        ],
        "*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged -v"
        }
    },
    "author": "u/Eurostat",
    "license": "EUPL-1.2",
    "files": [
        "src/",
        "!src/test/",
        "dist/",
        "!dist/test/",
        "!dist/tsconfig.tsbuildinfo"
    ],
    "keywords": [
        "vtl",
        "antlr",
        "monaco"
    ],
    "homepage": "https://github.com/eurostat/vtl-editor",
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@storybook/addon-actions": "^6.3.4",
        "@storybook/addon-essentials": "^6.3.4",
        "@storybook/addon-links": "^6.3.4",
        "@storybook/react": "^6.3.4",
        "@types/debug": "^4.1.6",
        "@types/node": "^16.3.1",
        "@types/react": "^17.0.14",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "antlr4ts": "^0.5.0-alpha.4",
        "babel-loader": "^8.2.2",
        "css-loader": "^5.2.6",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^7.2.0",
        "file-loader": "^6.2.0",
        "husky": "^4.3.0",
        "json-antlr-tools-ts": "^0.1.4",
        "lint-staged": "^10.5.4",
        "monaco-editor": "^0.23.0",
        "monaco-editor-webpack-plugin": "^3.0.1",
        "prettier": "^2.3.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-monaco-editor": "^0.43.0",
        "simplifyify": "^8.0.3",
        "style-loader": "^2.0.0",
        "terser": "^5.7.1",
        "terser-webpack-plugin": "^5.1.4",
        "ts-loader": "^9.2.3",
        "typescript": "^4.3.5",
        "vtl-2-0-antlr-tools-ts": "^0.1.6",
        "webpack": "^5.51.1",
        "webpack-cli": "^4.7.2"
    },
    "peerDependencies": {
        "antlr4ts": "*",
        "monaco-editor": "*",
        "react": "*",
        "react-dom": "*",
        "react-monaco-editor": "*"
    },
    "optionalDependencies": {
        "@types/react": "^17.0.14"
    },
    "dependencies": {}
}
