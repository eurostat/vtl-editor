{
    "compilerOptions": {
        "baseUrl": "./src",
        "module": "CommonJS",
        "target": "ES2017",
        "lib": ["es2015", "DOM"],
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "incremental": true,
        "strict": true,
        "downlevelIteration": true,
        "jsx": "react-jsx",
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["src/stories"]
}
